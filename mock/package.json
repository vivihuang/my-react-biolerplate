{
  "name": "mock-server",
  "version": "0.0.1",
  "description": "Use restify to build a mock server for dev.",
  "main": "server.js",
  "repository": "https://github.com/vivihuang/mock-server.git",
  "author": "Vivi Huang",
  "license": "none",
  "ava": {
    "files": [
      "**/*.spec.js"
    ],
    "source": [
      "**/*.{js}",
      "!dist/**/*"
    ],
    "concurrency": 5,
    "failFast": true,
    "tap": true,
    "powerAssert": false,
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  },
  "scripts": {
    "start": "NODE_PATH=. nodemon server.js --exec babel-node",
    "test": "ava"
  },
  "dependencies": {
    "app-module-path": "^2.2.0",
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "faker": "^4.1.0",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "nodemon": "^1.11.0",
    "require-dir": "^0.3.2",
    "restify": "^4.3.0"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "es6-promise": "^4.1.0",
    "isomorphic-fetch": "^2.2.1"
  }
}
